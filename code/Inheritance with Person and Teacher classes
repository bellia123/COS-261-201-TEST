// Base class
class Person {
    protected String name;
    protected int age;
    protected String gender;
    
    public Person(String name, int age, String gender) {
        this.name = name;
        this.age = age;
        this.gender = gender;
    }
    
    public void displayInfo() {
        System.out.println("Name: " + name);
        System.out.println("Age: " + age);
        System.out.println("Gender: " + gender);
    }
}

// Subclass inheriting from Person
class Teacher extends Person {
    private String subject;
    private String staffId;
    private int yearsOfExperience;
    
    public Teacher(String name, int age, String gender, String subject, 
                  String staffId, int yearsOfExperience) {
        super(name, age, gender);  // Call parent constructor
        this.subject = subject;
        this.staffId = staffId;
        this.yearsOfExperience = yearsOfExperience;
    }
    
    // Override the displayInfo method
    @Override
    public void displayInfo() {
        super.displayInfo();  // Call parent method
        System.out.println("Subject: " + subject);
        System.out.println("Staff ID: " + staffId);
        System.out.println("Years of Experience: " + yearsOfExperience);
    }
    
    // Additional method specific to Teacher
    public void teach() {
        System.out.println(name + " is teaching " + subject);
    }
    
    public static void main(String[] args) {
        Teacher teacher = new Teacher("Dr. Adamu", 45, "Male", "Computer Science", 
                                     "UNN/CS/001", 15);
        
        System.out.println("Teacher Information:");
        teacher.displayInfo();
        
        System.out.println("\nTeaching demonstration:");
        teacher.teach();
    }
}
